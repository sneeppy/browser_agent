# Unified LLM API Service Configuration
# Get your API key from the unified service provider
AGENTPLATFORM_KEY=your_key_here

# Model name (must match one of the supported models)
# Examples: openai/gpt-4o, openai/gpt-4-turbo, anthropic/claude-3-5-sonnet-20241022
LLM_MODEL=openai/gpt-4o

# API base URL (default is the unified service)
LLM_API_BASE_URL=your_base_url

# Browser Settings
USE_CHROME_USER_PROFILE=true
BROWSER_HEADLESS=false
BROWSER_VIDEO_RECORDING=true
BROWSER_TIMEOUT=30000

# Checkpointing
# Redis опционален: включайте только если сами добавили зависимости и хотите RedisSaver.
USE_REDIS=false
REDIS_URL=redis://localhost:6379

# Encryption Key (32 bytes, base64)
# Generate with: python -c "import base64; print(base64.b64encode(__import__('os').urandom(32)).decode())"
ENCRYPTION_KEY=your_encryption_key_here

# Logging
LOG_LEVEL=INFO
